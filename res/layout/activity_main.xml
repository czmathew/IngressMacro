<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/GridLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="5"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:rowCount="20"
    android:useDefaultMargins="false"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/textView1"
        android:layout_column="0"
        android:layout_columnSpan="3"
        android:layout_marginTop="22dp"
        android:layout_row="0"
        android:text="Number of Items" />

    <EditText
        android:id="@+id/dropNumber"
        android:layout_width="90dp"
        android:layout_column="0"
        android:layout_columnSpan="3"
        android:layout_marginTop="15dp"
        android:layout_row="1"
        android:ems="10"
        android:inputType="number"
        android:text="1" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/button1"
        android:layout_column="0"
        android:layout_row="2"
        android:onClick="dropItems"
        android:text="Drop"
        android:visibility="invisible" />

    <Button
        android:id="@+id/button2"
        android:layout_column="2"
        android:layout_row="2"
        android:onClick="recItems"
        android:text="Recycle"
        android:visibility="invisible" />

    <Button
        android:id="@+id/btnDropXML"
        android:layout_column="0"
        android:layout_row="3"
        android:onClick="dropItemsXML"
        android:text="Drop" />

    <Button
        android:id="@+id/button3"
        android:layout_column="0"
        android:layout_columnSpan="3"
        android:layout_row="6"
        android:onClick="loadOverlay"
        android:text="Overlay"
        android:visibility="visible" />

    <Button
        android:id="@+id/button4"
        android:layout_column="2"
        android:layout_columnSpan="2"
        android:layout_row="6"
        android:onClick="hideOverlay"
        android:text="Hide overlay"
        android:visibility="visible" />

    <Button
        android:id="@+id/btnRecycleXML"
        android:layout_column="2"
        android:layout_gravity="center_horizontal|top"
        android:layout_row="3"
        android:onClick="recycleItemsXML"
        android:text="Recycle" />

    <TextView
        android:id="@+id/lblBottom"
        android:layout_column="0"
        android:layout_columnSpan="5"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_row="19"
        android:text="x" />

    <Button
        android:id="@+id/Button01"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:layout_row="9"
        android:onClick="loadInputs"
        android:text="Load inputs"
        android:visibility="gone" />

    <Button
        android:id="@+id/btnDropSettings"
        android:layout_width="30dp"
        android:layout_column="1"
        android:layout_gravity="left|top"
        android:layout_row="3"
        android:onClick="btnDropSettingsClick"
        android:text="X" />

    <Button
        android:id="@+id/btnRecycleSettings"
        android:layout_width="30dp"
        android:layout_column="3"
        android:layout_gravity="center_horizontal|top"
        android:layout_row="3"
        android:onClick="btnRecycleSettingsClick"
        android:text="X" />

</GridLayout>