<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".DropSettingsActivity" >

    <Space
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="fill_vertical" />

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="fill_horizontal" >

        <GridLayout
            android:id="@+id/GridLayout2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="fill_horizontal"
                android:layout_marginBottom="10dp" >

                <TableRow
                    android:id="@+id/tableRow1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/textView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Start Ingress" />
                </TableRow>

                <TableRow
                    android:id="@+id/tableRow2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/lblBottom"
                        android:text="Sleep" />

                    <EditText
                        android:id="@+id/txtInitSleep"
                        android:ems="10"
                        android:inputType="number"
                        android:width="@dimen/input_sleep_width" >

                        <requestFocus />
                    </EditText>
                </TableRow>
            </TableLayout>

            <TextView
                android:id="@+id/textView3"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="Loop begin" />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_gravity="fill_horizontal" >

                <TableRow
                    android:id="@+id/tableRow3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Click OPS" />

                    <EditText
                        android:id="@+id/txtOPSposx"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="x"
                        android:inputType="number"
                        android:width="@dimen/input_position_width" />

                    <EditText
                        android:id="@+id/txtOPSposy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="y"
                        android:inputType="number"
                        android:width="@dimen/input_position_width" />
                </TableRow>

                <TableRow
                    android:id="@+id/tableRow4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sleep" />

                    <EditText
                        android:id="@+id/txtOPSsleep"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="ms"
                        android:inputType="number"
                        android:width="@dimen/input_sleep_width" />
                </TableRow>

                <TableRow
                    android:id="@+id/tableRow5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Select Item" />

                    <EditText
                        android:id="@+id/txtSelectItemPosx"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="x"
                        android:inputType="number"
                        android:width="@dimen/input_position_width" />

                    <EditText
                        android:id="@+id/txtSelectItemPosy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="y"
                        android:inputType="number"
                        android:width="@dimen/input_position_width" />
                </TableRow>

                <TableRow
                    android:id="@+id/TableRow01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/TextView01"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sleep" />

                    <EditText
                        android:id="@+id/txtSelectItemSleep"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="ms"
                        android:inputType="number"
                        android:width="@dimen/input_sleep_width" />
                </TableRow>

                <TableRow
                    android:id="@+id/TableRow03"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/TextView02"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Drop" />

                    <EditText
                        android:id="@+id/txtDropPosx"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="x"
                        android:inputType="number"
                        android:width="@dimen/input_position_width" />

                    <EditText
                        android:id="@+id/txtDropPosy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="y"
                        android:inputType="number"
                        android:width="@dimen/input_position_width" />
                </TableRow>

                <TableRow
                    android:id="@+id/TableRow02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/TextView03"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sleep" />

                    <EditText
                        android:id="@+id/txtDropSleep"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="ms"
                        android:inputType="number"
                        android:width="@dimen/input_sleep_width" />
                </TableRow>

                <TableRow
                    android:id="@+id/tableRow6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <Button
                        android:id="@+id/button1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="saveXML"
                        android:text="Save" />

                </TableRow>

                <TableRow
                    android:id="@+id/tableRow7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                </TableRow>

                <TableRow
                    android:id="@+id/tableRow8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                </TableRow>

            </TableLayout>

            <TextView
                android:id="@+id/lblInputs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="Load settings for:" />

            <Spinner
                android:id="@+id/spinnerRecycle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="fill_horizontal" />

        </GridLayout>
    </ScrollView>

</LinearLayout>